# Cycling AI Analysis - Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!

# AWS Configuration
aws_region   = "us-east-1"
environment  = "prod"
project_name = "cycling-ai"

# Supabase Configuration (from Supabase Dashboard > Settings > API)
supabase_url              = "https://your-project-ref.supabase.co"
supabase_anon_key         = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
supabase_service_role_key = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
supabase_jwt_secret       = "your-jwt-secret-from-supabase"

# API Keys
anthropic_api_key = "sk-ant-..."
google_api_key    = ""  # Optional
openai_api_key    = ""  # Optional

# AI Plan Generation
# "library" = LLM generates plan structure, library provides workouts (faster, cheaper)
# "llm" = Full LLM generation including workouts (more flexible)
workout_source = "library"

# Lambda Configuration (Free Tier friendly defaults)
lambda_memory_size = 512  # MB
lambda_timeout     = 300  # seconds (5 min)

# Custom Domain (optional)
# When set, Route 53 hosted zone is created and Amplify domain association is configured
# After applying, update your domain registrar's nameservers to the Route 53 values
custom_domain = "planmypeak.com"

# Certificate ARN (optional - only needed for CloudFront, Amplify handles SSL automatically)
# certificate_arn = "arn:aws:acm:us-east-1:123456789:certificate/..."

# GitHub Configuration for Amplify
github_repository    = "https://github.com/eduardoarantes/athlete_ai_analysis"
github_access_token  = "ghp_xxxxxxxxxxxx"  # GitHub PAT with repo access
